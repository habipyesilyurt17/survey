<%= simple_form_for(@survey) do |f| %>
  <div class="row">
    <div class="form-inputs">
      <%= f.input :name, input_html: {class: "form-control mb-3"} %>
    </div>
    <div class="new_record_button mb-5">
      <%= link_to_add_fields("Add Question", f, :questions, "question") %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
      <%= link_to 'Back', surveys_path, class: "btn btn-dark" %>
    </div>
  </div>
<% end %>
